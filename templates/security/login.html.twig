{% extends 'base.html.twig' %}

{% block title %}Connexion - Dear Future
{% endblock %}

{% block body %}
	<div class="card" style="max-width: 500px; margin: 40px auto; padding: 40px;">
		<form method="post">
			{% if error %}
				<div style="background: #fee2e2; color: #991b1b; padding: 15px; border-radius: 6px; margin-bottom: 20px;">
					<i class="fas fa-exclamation-circle"></i>
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			{% if app.user %}
				<div style="margin-bottom: 20px;">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %}

			<h1 style="text-align: center; margin-bottom: 30px;">Connexion</h1>

			<div style="margin-bottom: 20px;">
				<label for="username">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="username" class="form-control" autocomplete="email" required autofocus>
			</div>

			<div style="margin-bottom: 20px;">
				<label for="password">Mot de passe</label>
				<input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div style="margin-bottom: 25px; display: flex; align-items: center; gap: 10px;">
				<input type="checkbox" name="_remember_me" id="_remember_me" style="width: auto; margin: 0;">
				<label for="_remember_me" style="margin: 0; cursor: pointer;">Se souvenir de moi</label>
			</div>

			<button class="btn" type="submit" style="width: 100%; justify-content: center;">
				Se connecter
			</button>

			<p style="text-align: center; margin-top: 20px; font-size: 0.9rem;">
				Pas encore de compte ?
				<a href="{{ path('app_register') }}" style="color: var(--primary);">S'inscrire</a>
			</p>
		</form>
	</div>
{% endblock %}
